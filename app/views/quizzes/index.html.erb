<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="mt-5 mx-10 flex justify-between">
    <% if current_user %>
      <p>Welcome <%= current_user.email %>, you are <%= current_user.role %> user </p>
      <% if current_user.admin? %>
        <p> There are <%= User.count %> users in the website</p>
      <% end %>
    <% end %>
    <%= link_to 'New quiz', new_quiz_path, class: "rounded-lg py-2 px-3 bg-blue-400 text-white block font-medium" %>
  </div>
  <div class="flex mx-10 mt-8 justify-center">
    
    <h1 class="text-3xl font-bold text-center">All Active Quizes</h1>
    
  </div>

  <div id="quizzes" class="min-w-full">
    <%= render @quizzes %>
  </div>
</div>
